server {
    listen 80;
    server_name localhost;

    root /var/www/html;
    index index.php index.html;

    location /adminer {
        alias /var/www/html/adminer/;
        index index.php;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.3-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}
